                    </a>
                </div>
                <div class="menu-style-2 book-menu menu-hover">
                    <nav>
                        <ul>
                            <li><a class="text-bg-dark-light"  href="/">home</a>  
                            </li>
                            <li><a  class="text-bg-dark-light" href="/shop">shop</a>
                                
                            </li>
                            <li><a class="text-bg-dark-light" href="/about">about</a>
                                
                            </li>
                            <li><a href="/contact">contact</a></li>
                            <li>
                                <% if(user){%>
                                    <a href="#">Account</a>
                                    <ul class="single-dropdown">
                                        <li><a class="text-bg-dark-light" href="/user/profile">Profile</a></li> 
                                        <li><a class="text-bg-dark-light" href="/user/address">Address</a></li> 
                                         <li><a class="text-bg-dark-light" href="/order">Orders</a></li>
                                         <li><a class="text-bg-dark-light" href="/user/wallet">Wallet</a></li>
                                        </ul>
                               <% } %>

                            </li>
                        </ul>
                    </nav>
                </div>
                <% if(user){ %>

                    <div class="header-cart-2">
                        <a class="icon-cart" href="/cart">
                            <i class="ti-shopping-cart"></i>
