            <div class="header-top">
                <div class="header-info">
                    <span>Contact us - 00 221 225 123-30  or  <a href="#">info@domain.com</a></span>
                </div>
                <div class="book-login-register">
                    <ul>
                        <% if (user) { %>
                            <li><a href="/wishlist"><i class="ti-heart"></i>wishlist</a></li>
                            <li><a href="/auth/logout"><i class="ti-user"></i>Logout</a></li>
                         
                        <% } else { %>
                            <li><a href="/auth/login"><i class="ti-user"></i>login</a></li>
                            <li><a href="/auth/register"><i class="ti-settings"></i>register</a></li>
                            <% } %>
