<div class="checkout-area pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 text-center">
                <h3 class="display-3 text-success mb-4">Thank you for your order!</h3>
                <div class="order-details mt-4">
                    <p class="lead"><strong class="text-success">Order Details:</strong></p>
                    <ul class="list-unstyled">
                        <li class="mb-2"><strong>Order ID:</strong> <span class="text-primary"><%= order.orderId %></span></li>
                        <li class="mb-2"><strong>Total Amount:</strong> <span class="text-primary"><%= order.totalPrice %></span></li>
                        <li class="mb-2">
                            <strong>Delivery Address:</strong>
                            <span class="text-primary"><%= order.street %>, <%= order.city %>, <%= order.state %></span>
                        </li>
                        <li class="mb-2">
                            <strong>Ordered Date:</strong>
                            <span class="text-primary"> <%= new Date(order.orderedDate).toUTCString() %></span>
                        </li>
                        <h4 class="mt-4">Order Items</h4>
                        <% order.orderItems.forEach(product => { %>
                        <ul class="list-group">
                            <li class="list-group-item">
                                Product Name: <%= product.product.title %>
                                <span class="badge badge-primary">Quantity: <%= product.quantity %></span>
                            </li>
                        </ul>
                        <% }) %>
                    </ul>
                </div>
                <div class="quickview-btn-cart mt-3">
                    <a class="btn btn-dark h-auto" href="/shop">Continue Shopping</a>
                    <a class="btn btn-dark h-auto" href="/order">View Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>