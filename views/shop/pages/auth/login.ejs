 <!-- login-area start -->
 <div class="register-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-12 col-lg-6 col-xl-6 ms-auto me-auto">
                <%- include('../../partials/flash-message.ejs') %>
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-form">
                            <form action="/auth/login" method="post" id="loginForm">
                                <input type="user-mail" name="email" placeholder="email">
                                <p class="text-danger" id="emailError"></p>
                                <input type="password" name="password" placeholder="Password">
                                <p class="text-danger" id="passwordError"></p>
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        
                                        <a href="/auth/forgot-password">Forgot Password?</a>
                                    </div>
                                    <button type="submit" class="default-btn floatright" id="submitButton" >Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- login-area end -->

<script src="/shop/js/loginValidation.js"></script>