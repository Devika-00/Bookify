<div class="container mt-4 text-center">
    <div class="row">
        <div class="col-md-12">
            <h1>Orders</h1>

            <!-- Bordered Box for Order List -->
            <div class="border rounded p-3 shadow">
                <!-- Order List -->
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>So.No</th>
                            <th>Order ID</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Example order rows with different statuses -->

                        <% orders.forEach((order, index) => { %>
                            <tr>
                                <td class="align-middle"><%= index + 1 %></td>
                                <td class="align-middle"><%= order.orderId %></td>
                                <td class="align-middle">
                                    <%= order.shippingAddress %>, <%= order.city %>, <%= order.zip %>
                                </td>
                                <td class="align-middle">
                                    <%= new Date(order.orderedDate).toLocaleDateString('en-US', { year: 'numeric', month:
                                    'long', day: 'numeric' }) %>
                                </td>
                                <td class="align-middle"><%= order.totalPrice.toFixed(2) %></td>
                                <td class="align-middle">
                                    <a class="btn btn-sm btn-primary" href="/admin/order/<%= order.orderId %>">Details</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>