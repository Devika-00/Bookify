<!-- Sidebar -->
<div class="container-fluid">
    <div class="row">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
            <!-- Add your sidebar content here -->
        </nav>
        
        <!-- Page Content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Personal Information</h1>
                <h5 class="h5">Settings</h5>
            </div>


            <!-- Profile Photo Section -->
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <div class="profile-photo">
                <img src="images/file-841827-511370.jpg" alt="Profile Photo" class="img-fluid w-50 " id="profileImage">
            </div>
            <button type="button" class="btn btn-primary btn-sm mt-2" data-toggle="modal" data-target="#changeProfilePhotoModal">
                Change Profile Photo
            </button>
        </div>
    </div>
</div>

            <!-- Setting Form -->
            <div class="container">
                <form>
                    <!-- First Name -->
                    <div class="form-group">
                        <label for="firstName">First Name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="Enter first name">
                    </div>

                    <!-- Last Name -->
                    <div class="form-group">
                        <label for="lastName">Last Name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Enter last name">
                    </div>

                    <!-- Mobile Number -->
                    <div class="form-group">
                        <label for="mobileNumber">Mobile Number</label>
                        <input type="tel" class="form-control" id="mobileNumber" placeholder="Enter mobile number">
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email">
                    </div>

                    <!-- Date of Birth -->
                    <div class="form-group">
                        <label for="dob">Date of Birth</label>
                        <input type="date" class="form-control" id="dob">
                    </div>

                    <!-- Last Update Information Button -->
                    <button type="button" class="btn btn-primary mt-3">Update Information</button>
                </form>
            </div>
        </main>
    </div>
</div>